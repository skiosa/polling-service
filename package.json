{
  "name": "polling-service",
  "version": "1.0.0",
  "description": "service to poll RSS feeds and parse Metadata",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "debug": "nodemon",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.spec.ts'",
    "test:ci": "nyc npm run test"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/**/*.spec.ts",
      "src/app.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "excludeNodeModules": true,
    "branches": 0,
    "lines": 0,
    "functions": 0,
    "statements": 0
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skiosa/polling-service.git"
  },
  "author": "skiosa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skiosa/polling-service/issues"
  },
  "homepage": "https://github.com/skiosa/polling-service#readme",
  "dependencies": {
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "skiosa-orm": "github:skiosa/orm#v1.2.5",
    "typeorm": "^0.3.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/es6-shim": "^0.31.42",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.7.0"
  }
}
